<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.frescaMangaement.FrescaController">
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center> <!-- Add spacing attribute -->
      
          <Button fx:id="restaurantButton" alignment="CENTER" onAction="#openNewOrder" styleClass="restaurant-button" text="Restaurant" BorderPane.alignment="CENTER">
              <graphic>
                  <ImageView fitHeight="100" fitWidth="100">
                      <Image url="@../icons/restaurant_icon.png" />
                  </ImageView>
              </graphic>
          </Button>
      </center>
      <bottom>
      
          <!-- Add spacing between buttons -->
          <Button alignment="CENTER" onAction="#viewTakeAwayOrders" styleClass="take-away-button" text="Take Away" BorderPane.alignment="CENTER">
              <graphic>
                  <ImageView fitHeight="100" fitWidth="100">
                      <Image url="@../icons/take_away_icon.png" />
                  </ImageView>
              </graphic>
          </Button>
      </bottom></BorderPane>

</VBox>
